{
  "manifest_version": 3,
  "name": "Smart tab organizer",
  "version": "1.0",
  "description": "Group tabs based on bookmarks and folders.",
  "permissions": [
  "tabs",
  "tabGroups",
  "storage",
  "bookmarks"
],
  "background": {
    "service_worker": "background.js"
  },
    "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_popup": "index.html",
    "default_title": "Smart Tab Organizer"
  },
  "storage": {
    "sync": true
  }
}
